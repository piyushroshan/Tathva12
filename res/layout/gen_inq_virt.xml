<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#00688B"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
   
    <LinearLayout android:id="@+id/linearLayout_gen_inq_virt" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost 
    android:id="@+id/tabhost_gen_inq_virt"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1" 
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TabWidget
        
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" >
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_inq_virt_intro" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_inq_title" android:text="Inquisito Virtuoso" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center"  android:gravity="center"  android:textSize="20dp" android:layout_weight="0.03"></TextView>
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_gen_inq_virt_Intro" android:text="'Ladies and Gentlemen.. \n\nThe Dark forces are getting murkier by the days and my brilliant yet half-nutter friend, Sherlock has immersed himself in Hollywood paranoia. A murderer is on the loose. Answers are many but none seems to fit. Even the air seems to be hanging with smell of blood. Each passing moment lays another soul to rest. \nDo you have the  Elementary  in you? Sovereigns and Hearts assured. Jump in as soon as you make up your mind.\n\nDr. Watson\nPS- Danger awaits on the trail. \n" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_inq_virt_specs" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_gen_inq_virt_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_gen_inq_virt_specs" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_gen_inq_virt_specs" android:text="1. Each team should comprise of utmost 3 members.\n2. The event will take place in three stages: Prelims, Qualifiers and finals\n\u25cb PRELIMS : The first round is a written preliminary round evaluating basic\nknowledge on Forensic Intelligence and Life sciences.\n\u25cb QUALIFIERS : The qualifiers of prelims will get into the second round and will\nbe assessed for the finals under two stages.\n\u25a0 Evidence Collection: The selected participants will first be prone to a\ncrime scene and have to submit a note on the visual evidences\ncollected.\n\u25a0 Written Assessment: A list of all possible suspects along with their\nprofiles containing all necessary information will be provided. The\nqualifiers will have to write a detailed note on their suspect, citing solid\nreasons from their visual evidences collected within a time span of 1\nhour.\n\u25cb FINALS : Three teams qualifying the previous rounds will proceed to the\nfinals."
                                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_inq_virt_stmt" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_gen_inq_virt_stmt" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_gen_inq_virt_stmt" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_gen_inq_virt_stmt" android:text="The crime scene has been analyzed. Medical Examiners and Law enforcement are at your service. All you have to do is unravel the perfect crime by threading the evidences to pin down the perpetrator. Common sense and presence of mind will prevail. "
                                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            
             
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_inq_virt_judge" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_gen_inq_virt_judge" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_gen_inq_virt_judge" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_gen_inq_virt_judge" android:text="Points will be allotted by the judges on the basis of :\n1. Evidence collection.\n2. Interpretation and reasoning.\n3. Performance in written exam round.\n4. Performance in final round.\n5. Total time taken.\n6. In the case of a tie, a quiz based on forensic science will be conducted.\n7. The decision of Judges shall be final and binding.\n8. Event coordinators reserve rights to change any rule as they deem fit"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
         
                         <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_inq_virt_prizes" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_gen_inq_virt_prizes" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_gen_inq_virt_prizes" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_gen_inq_virt_prizes" android:text="First\tRs. 6000/-\nSecond\tRs. 4000/-\nThird\tRs. 2000/-\n" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
             
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_inq_virt_contact" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_gen_inq_virt_contact" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_gen_inq_virt_contact" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_gen_inq_virt_contact" android:text="Stevin Wilson\nEvent Manager\nPhone:+919633429249\nE-mail: inq@tathva.org\n\nBabukrishna M\nEvent Manager\nPhone:+919567503080\nE-mail: inq@tathva.org\n\nAruna Mohan\nEvent Manager\nPhone:+918891761904\nE-mail: inq@tathva.org" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
          </FrameLayout>
            
    </LinearLayout>
    
</TabHost>
 </LinearLayout>