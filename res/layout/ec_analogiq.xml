<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#3b5999"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
    <LinearLayout android:id="@+id/linearLayout_ec_analogiq" android:layout_width="fill_parent" android:background="#000000" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost 
    android:id="@+id/tabhost_ec_analogiq"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1" 
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TabWidget
        
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" >
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_analogiq_intro" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_analogiq_title" android:text ="AnalogiQ" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center"  android:gravity="center"  android:textSize="20dp" android:layout_weight="0.03"></TextView>
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ec_analogiq_Intro" android:text="Is the game of 1\'s and 0\'s driving you nuts ? \n\nANALOGIQ provides you a platform to showcase your talents in innovative thinking and circuit design.\nThe event basically focuses on the participant\'s ideas and the power to transform ideas into commercially viable and cost effective circuit using analog components." android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_analogiq_specs" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ec_analogiq_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_analogiq_specs" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ec_analogiq_specs" android:text="\u25cf CIRCUIT SPECIFICATIONS\n1.The circuit cost should be less than Rs.1000.\n2.The circuit should be neatly assembled on a PCB .\n3.External power will be provided if required .\n4.The judge\'s decision will be final .\n5.Ready made kits should not be used .\n6.ICs other than those mentioned should not be used and if used, will lead to\ndisqualification\n7. The final circuit should be the same as the one approved in prelims by the judges and if\nthere is large variation in the proposed design and assembled circuit , the team will be\ndisqualified .\n8. Direct circuits from the internet and books should not be used .\n9. Judges decisions will be final, and any of the above mentioned rules can change\naccording to the scenario of the event\n\n\n\u25cfTEAM SPECIFICATIONS\n1.Each team consist a maximum of 3 members.\n2.Team members must produce valid ID card of their institute.\n3.Inter\u00adcollege teams are permitted.\n\n"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_analogiq_stmt" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ec_analogiq_stmt" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_analogiq_stmt" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ec_analogiq_stmt" android:text="The Objective of the event is to design an innovative and cost efficient commercial circuit using analog components. " 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_analogiq_rounds" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ec_analogiq_rounds" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_analogiq_rounds" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ec_analogiq_rounds" android:text="\nThe event shall comprise of two rounds :\n\n1. PRELIMINARY ROUND :\n\nTeams are supposed to send their ideas and the proposed design to us. The 15 most\npromising ideas will be shortlisted and they will be qualified for the final round.\n\n2. FINAL ROUND :\n\nTeams that pass through the prelims shall take part in the final round . The working\nmodel of the circuit has to be presented to the esteemed panel of judges for evaluation.\n " 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_analogiq_judge" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ec_analogiq_judge" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_analogiq_judge" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ec_analogiq_judge" android:text="\n1.The circuit will be evaluated on the basis of :\n\u25cf Circuit Idea\n\u25cf Cost efficiency\n\u25cf Design\n\u25cf PCB Assembly\n\u25cf Innovation\n2.  The  teams   may   be  tested  through  viva\u00advoce  on  the  design  of  the  circuit  and  other  details   of\nimplementation.\n" 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_analogiq_contact" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_ec_analogiq_contact" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_analogiq_contact" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ec_analogiq_contact" android:text="\nANANTHU R KRISHNAN\nEvent Manager\nPhone:+919400590976\nE-mail:analogiq@tathva.org\n\nNITHIN SIMON\nEvent Manager\nPhone:+918086613325\nE-mail:analogiq@tathva.org\n\nARUN KOSHY T\nEvent Manager\nPhone:+919446481866\nE-mail:analogiq@tathva.org" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_analogiq_prize" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_ec_analogiq_prize" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_analogiq_prize" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ec_analogiq_prize" android:text="First\tRs. 8000/-\nSecond\tRs. 5000/-\nThird\tRs. 3000/-" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
          </FrameLayout>
            
    </LinearLayout>
    
</TabHost>
 </LinearLayout>