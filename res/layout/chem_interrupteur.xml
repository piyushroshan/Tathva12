<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#3b5999"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
    <LinearLayout android:id="@+id/linearLayout_chem_interrupteur" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost 
    android:id="@+id/tabhost_chem_interrupteur"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1" 
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TabWidget
        
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" >
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_chem_interrupteur_intro" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_Interrupteur_title" android:text ="Interrupteur" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center"  android:gravity="center"  android:textSize="20dp" android:layout_weight="0.03"></TextView>
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_chem_interrupteur_Intro" android:text="And God said, &quot; Let there be light &quot; and there was light.\nBut here we present an interesting twist! \n\nMake a chemical switch that comprises of a beaker and some liquid. But that\'s not all, to go home with glory you must be able to switch it off after exactly 3 minutes!\n\nDo remember - Benjamin Franklin may have discovered electricity, but it was the man who invented the switch who made the money - Earl Wilson" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_chem_interrupteur_specs" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_chem_interrupteur_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_chem_interrupteur_specs" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_chem_interrupteur_specs" android:text="1. Maximum of three members per team.\n2. Inter college teams are allowed.\n3. Participants must produce Tathva IDs at the time of event.\n4. Hazardous or explosive chemicals must not be used.\n5. The timer will be started as soon as the setup is ready.\n6. The circuit consists of a 9V battery and a bulb connected using insulated copper\nwires.\n7. The mechanism must be connected to the circuit through the alligator clips that will\nbe part of the provided circuit.\n8. The two wires cannot be inter\u00adconnected by any means.\n9. The mechanism must be self\u00adcontained and must fit on a table two feet wide and six\nfeet long.\n10. No human intervention is allowed in between. The bulb should get switched off\nautomatically.\n11. The mechanism must not leave any residue on the table or surrounding area.\n12. The mechanism must not spill any liquids or release any sprays.\n13. The light bulb must not be turned off by destroying it."
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_chem_interrupteur_stmt" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_chem_interrupteur_stmt" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_chem_interrupteur_stmt" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_chem_interrupteur_rounds" android:text="You\'ll be given an open circuit. Complete the circuit such that it automatically opens after 3 minutes using a chemical switch, which has a solution, following a timed reaction. " 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_chem_interrupteur_judge" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_chem_interrupteur_judge" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_chem_interrupteur_judge" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_chem_interrupteur_judge" android:text="1. The judging will be based on the closeness to the specified time in which the circuit\ngets opened.\n2. The teams will be disqualified if the circuit gets broken before 30 seconds or after 4\nminutes.\n3. The mechanism with the exact time of action wins the event.\n4. In case no team comes up with the exact 3 min breaker circuit, the team with the\nclosest time of circuit break wins."
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_chem_interrupteur_guidelines" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_chem_interrupteur_guidelines" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_chem_interrupteur_guidelines" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_chem_interrupteur_judge" android:text="Participants may use gas-producing reactions and harness the gas to turn the light bulb off. A wire in the circuit may be dipped in acid, which will react with the wire and eventually break the circuit. For example, an iodine clock reaction may be used to trigger a switch. " 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            
        <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_chem_interrupteur_prizes" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_chem_interrupteur_prizes" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_chem_interrupteur_prizes" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_chem_interrupteur_prizes" android:text="First\tRs. 5000/-\nSecond\tRs. 3000/-\n" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_chem_interrupteur_contact" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_chem_interrupteur_contact" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_chem_interrupteur_contact" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_chem_interrupteur_contact" android:text="Jishnu\nEvent Manager\nPhone:+919496341376\nE-mail:interrupteur@tathva.org\n\nAnagha B Jayaraj\nEvent Manager\nPhone:+919446009064\nE-mail:interrupteur@tathva.org" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
          </FrameLayout>
            
    </LinearLayout>
    
</TabHost>
 </LinearLayout>
 
 