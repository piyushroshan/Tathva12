<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#00688B"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
   
    <LinearLayout android:id="@+id/linearLayout_highlight_envision_interface" android:layout_width="fill_parent" android:background="#000000" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost 
    android:id="@+id/tabhost_highlight_envision_interface"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1" 
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content">
        <TabWidget
        
            android:id="@android:id/tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp" >
            <LinearLayout android:layout_width="wrap_content" android:id="@+id/linear_highlight_envision_interface_intro" android:layout_height="wrap_content" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="wrap_content">
                       <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_interface_title" android:text ="Interface" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center"  android:gravity="center"  android:textSize="20dp" android:layout_weight="0.03"></TextView>
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_highlight_envision_interface_Intro" android:text="INTERFACE is a national level inter-college exhibition event organized by the IEEE student branch of National Institute of Technology, Calicut. It is a platform for emerging engineers to come up with their innovative creations. Working models from any topic under IEEE are welcome. We hope this event interfaces the technical community with our ulimate goal of &quot;Advancing Technology for Humanity.&quot; INTERFACE is a national level inter-college exhibition event organized by the IEEE student branch of National Institute of Technology, Calicut. It is a platform for emerging engineers to come up with their innovative creations. Working models from any topic under IEEE are welcome. We hope this event interfaces the technical community with our ulimate goal of &quot;Advancing Technology for Humanity.&quot; " android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            
            
              <LinearLayout android:layout_width="wrap_content" android:id="@+id/linear_highlight_envision_interface_spec" android:layout_height="wrap_content" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_highlight_envision_interface_spec" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_highlight_envision_interface_spec" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_highlight_envision_interface_spec" android:text="1. A team representing an institute can consist of a maximum of 5 members.\n2. Multiple teams can represent an institute.\n3. Projects coming under any wing of engineering are welcome.\n4. The participating teams must submit an abstract to interface@tathva.org on or before\n13th October, 2012. The abstract must contain the outline of the projects and other\nnecessary details.\n5. 30 teams will be shortlisted based on the abstracts submitted and will be informed on\n15th October, 2012.\n6. A team can submit a maximum of five different projects/prototypes.\n7. The projects will be put under complete display from 10am \u00ad 4pm on 19th and 20th of\nOctober\u00ad the days of Tathva \'12."                                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            
             <LinearLayout android:layout_width="wrap_content" android:id="@+id/linear_highlight_envision_interface_criteria" android:layout_height="wrap_content" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_highlight_envision_interface_criteria" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_highlight_envision_interface_criteria" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_highlight_envision_interface_criteria" android:text="1. The evaluation procedure includes two stages, one on each day of the exhibition,\ndone by the distinguished faculty of NIT Calicut.\n2. Creativity and extend of innovation are the primary basis of project evaluation. The\npractical application of the project and its scope will have equal emphasis.\n3. The way of presentation of the project will also count in the final marks.\n4. Decision of the judges will be final and binding."                                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            
             <LinearLayout android:layout_width="wrap_content" android:id="@+id/linear_highlight_envision_interface_prizes" android:layout_height="wrap_content" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_highlight_envision_interface_prizes" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_highlight_envision_interface_prizes" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_highlight_envision_interface_prizes" android:text="First\tRs. 15000/-\nSecond\tRs. 10000/-\nThird\tRs. 7000/-\n"                                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            
            <LinearLayout android:layout_width="wrap_content" android:id="@+id/linear_highlight_envision_interface_contact" android:layout_height="wrap_content" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_highlight_envision_interface_contact" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_highlight_envision_interface_contact" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_highlight_envision_interface_contact" android:text="PRAJITH PRASAD\nEvent Manager\nPhone:+919746923467\nE-mail:interface@tathva.org\n\nSURAJNATH P\nEvent Manager\nPhone:+919633821977\nE-mail:interface@tathva.org\n\nVENU S DHARAN\nEvent Manager\nPhone:+918891337077\nE-mail:interface@tathva.org" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
          </FrameLayout>
            
    </LinearLayout>
    
</TabHost>
 </LinearLayout>
