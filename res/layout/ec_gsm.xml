<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#3b5999"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
    <LinearLayout android:id="@+id/linearLayout_ec_gsm" android:layout_width="fill_parent" android:background="#000000" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost 
    android:id="@+id/tabhost_ec_gsm"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1" 
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TabWidget
        
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" >
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_gsm_intro" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_gsm_title" android:text ="GSM" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center"  android:gravity="center"  android:textSize="20dp" android:layout_weight="0.03"></TextView>

                        <TextView
                            android:id="@+id/text_ec_gsm_Intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\nGlobal System for Mobile communication is currently the global standard for digital cellular communication. However, engineers as we are, it &quot; s hard to suppress our innate urge to revolutionize.\n\nThis year at Tathva &quot; 12, we challenge you to build a mobile phone controlled rover, which must be able to reach a predetermined destination for the given maze."
                            android:textAppearance="?android:attr/textAppearanceMedium" >

</TextView>
                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_gsm_specs" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ec_gsm_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_gsm_specs" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ec_gsm_specs" android:text="\u25cf BOT SPECIFICATIONS\n1. Build a robot that can navigate using your instructions .\n2. Base of the machine must not be greater than 0.40 m * 0.25 m * 0.5 m(Length * Breadth\n* Height) . The dimensional constraints should be strictly followed .\n3. The weight of the bot should be less than 1 kg .\n4. The control of the bot can be done through a mobile phone or the participants can make\ntheir own model of the mobile phone.\n5. Communication between the rover and the participant will be through the GSM and not\nthrough IR beams , bluetooth or radio services . Readymade SMS kits are not allowed in\nthe event but the participants can manually build their own SMS kits or modules which\ncan be interfaced with the bot. The rover can operate by giving different self designed\ncodes such as 123,789 and code which will be created as per the design of the system.\n6. Only one of the team members can stay with the rover during the course of the bot\nthrough the maze.\n7. The judge\'s decision will be final. Each team will be given a maximum of 15 minutes time\nto complete the competition.\n8. Power supplies won\'t be provided externally.\n\n\u25cfTEAM SPECIFICATIONS\n1.Each team consists of a maximum of 4 members.\n2.Team members have to produce valid ID card of their institute.\n3.Inter\u00adcollege teams are permitted.\n"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_gsm_stmt" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ec_gsm_stmt" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_gsm_stmt" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ec_gsm_stmt" android:text="Build a robot that can navigate using your instructions transmitted through a mobile phone. The bot is then used to traverse a maze in a specified time." 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_gsm_judge" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ec_gsm_judge" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_gsm_judge" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ec_gsm_judge" android:text="\n1. The teams may be asked questions on the design of the circuit and other details about\nthe implementation.\n2. A specific time will be allotted to complete the mission.\n3. Teams which finish before the time limit will get bonus points.\n4. Any human intervention after dimension test will lead to deduction of points.\n5. The score scheme will be as follows:\nNet Score = 2000\u00ad(2*t)\u00ad(n*c)\nt = Time taken in seconds (a maximum of 10 minutes)\nn = Number of corrections\nc = Points deducted for each correction\n6. The team member with the bot can place it back in the original position if it slips, for\nwhich correction points will be deducted.\n7. The decision of judges shall be final, and any of the above mentioned rules are subject to change according to the scenario of the event.\n" 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_gsm_contact" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_ec_gsm_contact" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_gsm_contact" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ec_gsm_contact" android:text="GOKUL MOHAN U\nEvent Manager\nPhone:+919496462356\nE-mail:gsm@tathva.org\n\nASHWIN K MANOJ\nEvent Manager\nPhone:+919539897620\nE-mail:gsm@tathva.org\n\nASWITHA MARY ABRAHAM\nEvent Manager\nPhone:+919400677482\nE-mail:gsm@tathva.org\n" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_gsm_prizes" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_ec_gsm_prize" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_gsm_prize" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ec_gsm_prizes" android:text="First\tRs. 10000/-\nSecond\tRs. 5000/-\nThird\tRs. 3500/-\n" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
          </FrameLayout>
            
    </LinearLayout>
    
</TabHost>
 </LinearLayout>