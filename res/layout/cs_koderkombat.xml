<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#00688B"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
   
    <LinearLayout android:id="@+id/linearLayout_cs_koderkombat" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost 
    android:id="@+id/tabhost_cs_koderkombat"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1" 
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TabWidget
        
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" >
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_cs_koderkombat_intro" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
                       <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_koder_title" android:text ="Koder Kombat" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center"  android:gravity="center"  android:textSize="20dp" android:layout_weight="0.03"></TextView>
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_cs_koderkombat_Intro" android:text="\nOne of the major coding events in TATHVA, koderkombat gives you an opportunity to put your coding skills to the test.\n\nIf you believe you have what it takes to become coding warriors, then join the battle and code your way to victory in koderkombat." android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_cs_koderkombat_specs" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_cs_koderkombat_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_cs_koderkombat_specs" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_cs_koderkombat_specs" android:text="1.Coding should be done in C/C++ languages only.\n2.A team should consist of exactly 2 members. 1 member teams are not entertained.\n3.Inter\u00adcollege teams are allowed. In such cases, the prize money will be divided equally.\n4.Any number of teams are allowed from each college but an individual can register only\nfor one team.\n" 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_cs_koderkombat_rounds" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_cs_koderkombat_rounds" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_cs_koderkombat_rounds" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_cs_koderkombat_rounds" android:text="There will be a total of 3 rounds. An extra round may be conducted in case of ties in the last round.\n\n\nROUND 1 : \n\nThis is a written round mainly intended to test your foundations in C/C++ and your general programming skills. Questions will be both objective and subjective.\n15-20 teams will be shortlisted depending on participation.\n\n\nROUND 2 : \n\nThis round will also be a written round.\nIt will be a rapid fire round. You will be expected to attempt multiple questions in a limited time frame. \nSyntactical errors will be penalized.\nShort and elegant solutions will be awarded extra marks.\n\n\nROUND 3 : \n\nIn this round you will be provided with a terminal with gcc/g++ compilers pre-loaded. \nYour team working abilities will be put to test in this round. Each team will be provided a set of inter-related questions. Team members have to code for partial solutions independently on different systems. Some initial time will be provided for communication and devising plan of action. Final result will be based on the combination of partial solutions.\n" 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_cs_koderkombat_criteria" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_cs_koderkombat_criteria" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_cs_koderkombat_criteria" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_cs_koderkombat_criteria" android:text="\n\u25cf Teamwork, coding skills and algorithms used will be the basis for evaluation.\n\u25cf Short and elegant solutions will be awarded extra marks.\n\u25cf Points will not be carried over to subsequent rounds except in case of ties.\n\u25cf In round 2, partial solutions lacking clarity of thought will not be awarded marks.\n\u25cf For round 3, your codes will be tested against standard test cases set by the\ncoordinators. Partial marks will be awarded for each test case.\n\u25cf Rules and regulations are subject to change based on the availability of time and\nresources.\n\u25cf Coordinator\'s decision will be final and binding.\n" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_cs_koderkombat_prizes" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_cs_koderkombat_prizes" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_cs_koderkombat_prizes" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_cs_koderkombat_prizes" android:text="\nFirst\tRs. 5000/-\nSecond\tRs. 2500/-\nThird\tRs. 1500/-" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
             
             
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_cs_koderkombat_contact" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_cs_koderkombat_contact" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_cs_koderkombat_contact" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_cs_koderkombat_contact" android:text="Ashwin Lakshmanan\nEvent Manager\nPhone:+919633686117\nE-mail:koderkombat@tathva.org\n\nPraneeth Pabba\nEvent Manager\nPhone:+917736531241\nE-mail:koderkombat@tathva.org\n\nSharath Hari N\nEvent Manager\nPhone:+918714810018\nE-mail:koderkombat@tathva.org\n" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
          </FrameLayout>
            
    </LinearLayout>
    
</TabHost>
 </LinearLayout>