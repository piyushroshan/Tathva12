<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#00688B"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
   
    
    <LinearLayout android:id="@+id/linearLayout_workshop_hack_attack" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost 
    android:id="@+id/tabhost_workshop_hack_attack"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1" 
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TabWidget
        
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" >
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_workshop_hack_attack_intro" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text_hack_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.03"
                            android:gravity="center"
                            android:text="Hack Attack"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="20dp" >
</TextView>
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_workshop_hack_attack_Intro" android:text="Hack Attack, a National Ethical Hacking Conference featuring eminent personalities in this portfolio from all over the globe and zone wise Pre-Tathva Ethical Hacking Workshops throughout South Indian Colleges, the first of its kind intending to provide internships and free learning sessions for all zone-wise winners.\n\nTathva '12, the annual techno-management fest of NIT Calicut, India is introducing HACKATTACK, a National Ethical hacking Conference with its spotlights on the following:\n\nEthical Hacking and Information Security Workshops\nPanel Discussions\nLectures\nPublic Awareness\nNews Letters\nCompetitions" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_workshop_hack_attack_workshops" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_workshop_hack_attack_workshops" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_workshop_hack_attack_workshops" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_workshop_hack_attack_workshops" android:text="A journey through tackling the growing number of security threats in Cyber world. A solution to e-mail hacking, SMS and Call Spoofing, Credit Card fraud, Phishing, Remote Key Logging etc. Security tips against malicious threats in social networking sites like Facebook, Orkut etc. Conducted by TechBharath, a rapidly growing security services and investigation consulting organization led by Christy Philip Mathew, a pioneer Information Security and Cyber Crime Consultant.\n\nLearn and Interact with Industry Experts\n\nDemonstrations of Latest Hacking Techniques and Tools\n\nPowerPoint Presentations, Live Demos and Hacking Tutorials with HD Videos.\n\nAt the end of the workshop, we will be taking a test and top 35 students will get a discount of Rs.7500/- each in the course fees of CEH\n\nSpecial discount offer for the college students to join 1 month training program conducted at TECHBHARAT CONSULTING Center for Ethical Hacking and Cyber Forensics." android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_workshop_hack_attack_workshop_details" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_workshop_hack_attack_workshop_details" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_workshop_hack_attack_workshop_details" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_workshop_hack_attack_workshop_details" android:text="Date: 19-20th October 2012 (8 Hours/day)\nFees: 1200/-\nOrganizers: TechBharath\n\nModule 01: Introduction to Ethical Hacking\nModule 02: Email Hacking and Tracing\nModule 03: Google Hacking\nModule 04: Computer Hacking and Forensics\nModule 05: Trojan and Backdoors\nModule 06: Sniffers\nModule 07: Session Hijacking\nModule 08: Social Engineering\nModule 09: Website Hacking and Security\nModule 10: Advanced SQL Injection\nModule 11: Pentesting with Backtrack\nModule 12: Pen testing with Android\nModule 13: Hacking WEP and WPA Networks" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_workshop_hack_attack_contact" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_workshop_hack_attack_contact" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_workshop_hack_attack_contact" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_workshop_hack_attack_contact" android:text="Jeeth Joseph\nWorkshop Manager\nPhone:+919037407889\nE-mail:workshop@tathva.org\n\nNijesh K U\nWorkshop Manager\nPhone:+919995982014\nE-mail:workshop@tathva.org" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
          </FrameLayout>
            
    </LinearLayout>
    
</TabHost>
 </LinearLayout>