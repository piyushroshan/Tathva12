<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageView1" android:layout_height="wrap_content" android:src="@drawable/img" android:layout_weight="0.08" android:layout_width="wrap_content"></ImageView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:gravity="center" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:weightSum="1" android:layout_weight="0.90">
        <TextView android:textSize="22dp" android:layout_height="wrap_content" android:layout_weight="0.13" 
        android:layout_width="wrap_content" android:text="Events" android:id="@+id/textmainE"
         android:clickable="true"></TextView>
        <TextView android:text="Workshops"  android:clickable="true" android:textSize="22dp" android:id="@+id/textmainW" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.11"></TextView>
        <TextView android:text="Exhibitions"  android:clickable="true" android:textSize="22dp" android:id="@+id/textmainEx" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.12"></TextView>
        <TextView android:text="Highlights"  android:clickable="true" android:textSize="22dp" android:id="@+id/textmainH" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.15"></TextView>
        <TextView android:text="Initiatives"  android:clickable="true" android:textSize="22dp" android:id="@+id/textmainI" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.18"></TextView>
        <TextView android:text="Help"  android:clickable="true" android:textSize="22dp" android:id="@+id/textmainHelp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.11"></TextView>
    </LinearLayout>
 <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dip"
    android:maxLines="1"
    android:scrollHorizontally="true"
    android:ellipsize="marquee"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:marqueeRepeatLimit="marquee_forever"
    android:textColor="#ffffff"
    android:text="  Online registrations have closed. On the spot registration will begin on 20th October. | The schedule has been updated on 18th October | The list of shortlisted entries for B-Aptist and Sociobizz has been posted "
    android:id="@+id/ticker"
    />
</LinearLayout>
