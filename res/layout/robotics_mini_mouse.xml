<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#00688B"
    android:layout_height="fill_parent"
    android:weightSum="0">


    <LinearLayout android:id="@+id/linearLayouttrans" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost
    android:id="@+id/tabhost_robo_mini_mouse"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TabWidget

            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" >
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_robo_mini_mouse_intro" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:id="@+id/linear_robo_mini_mouse_intro_inner" android:layout_width="match_parent" android:layout_height="match_parent">
                       <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_mini_title" android:text ="Mini Mouse" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center"  android:gravity="center"  android:textSize="20dp" android:layout_weight="0.03"></TextView>
					   <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textMouseIntro" android:text="Autonomous robots have myriads of applications. This event aims at imparting to the minimouse, an adaptive intelligence to explore different maze configurations and to work out an optimum route for the shortest possible travel time.  " android:layout_width="wrap_content" android:layout_height="wrap_content">
                       </TextView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_robo_mini_mouse_stmt" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_robo_mouse_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linear_robo_mini_mouse_spec_inner" android:layout_width="match_parent" android:layout_height="match_parent">

                    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textMouseIntro" android:text="Autonomous robots have myriads of applications. This event aims at imparting to the minimouse, an adaptive intelligence to explore different maze configurations and to work out an optimum route for the shortest possible travel time. "
 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
 </LinearLayout>
 </ScrollView>
            </LinearLayout>

         	 <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_robo_mini_mouse_specs" android:layout_height="match_parent" android:orientation="vertical">
              <ScrollView android:id="@+id/scrollView_robo_mouse_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linear_robo_mini_mouse_spec_inner" android:layout_width="match_parent" android:layout_height="match_parent">

                    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textTransBlockSpec" android:text="Mouse specifications:\nThe minimouse should be self contained (there should not be any remote controls). It should be fully autonomous and should not receive any external control or data during the event.\nThe mouse must negotiate the maze; it should not fly over, jump over or damage the arena or the walls of the maze. Such bots will be disqualified from the competition.\nThe method of wall sensing is at the discretion of the contestants; however, the mouse must not exert a force on any wall likely to cause damage.\nThe bot shall not use energy source employing combustion process.\nThe bot shall be subject to the following size constraints:\nlength: 16cm, width: 16cm. There is no restriction on the height of the mouse. At any point of the competition, the size should not exceed the above constraints. The size constraints will be verified at the commencement of the event.\nThe mouse bot shall not leave any part of its body behind while negotiating the maze .\nAny violation of the above rules will lead to immediate disqualification from the event. \n\nMaze specifications:\nThe maze comprises of 16x16 multiples of an 18cmx18cm square. The walls constituting the maze shall be 5cm high and 1.2 cm thick. Passageways between the walls shall be 16.8 cm wide. The outside wall shall enclose the entire maze (assume 5% tolerance for the maze).\nThe start of the maze is marked by a red led and the destination by a blue led. The start and destination may not be at the corners."
                		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                	</LinearLayout>
                </ScrollView>
                
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_robo_mini_mouse_arena" android:layout_height="match_parent" android:orientation="vertical">
                 <ScrollView android:id="@+id/scrollView_robo_mouse_arena" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_robo_mini_mouse_inner" android:orientation="vertical"  android:layout_width="match_parent" android:layout_height="match_parent">
					
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_robo_mini_mouse_arenaa"
                android:text="The colours and figures for starting point and destination point are just for indication and won't be present in the actual arena."
                android:layout_width="wrap_content" android:layout_height="wrap_content"> </TextView>
                <ImageView android:layout_height="wrap_content" android:src="@drawable/xmarksthespot" android:layout_width="wrap_content" android:id="@+id/text_robo_mini_mouse_arena" > </ImageView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
			<LinearLayout android:layout_width="match_parent" android:id="@+id/linear_robo_mini_mouse_prizes" android:layout_height="match_parent" android:orientation="vertical">
				<ScrollView android:id="@+id/scrollView_robo_mouse_prizes" android:layout_width="match_parent" android:layout_height="wrap_content">
					<LinearLayout android:id="@+id/linear_robo_mini_mouse_spec_inner" android:layout_width="match_parent" android:layout_height="match_parent">

						<TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_robo_mini_mouse_prizes"
							android:text="First\tRs. 15000/-\nSecond\tRs. 8000/-\nThird\tRs. 5000/-\n\n\nScores are awarded on the basis of speed, efficiency of maze solving, and self-reliance of the mouse bot.li>\nThe total sores can be computed as:\n[50/T1]+[20/T2]-E-10P where T1 is time taken to reach the destination, T2 is the return time, E is the number of errors committed by the bot while returning and P is the touch penalty for manual assistance.\nThree teams with highest scores will be declared winners.\nThe judges have the right to ask the operators to explain the functioning of the mouse."
						android:layout_width="wrap_content" android:layout_height="wrap_content">
					</TextView>
				</LinearLayout>
                </ScrollView>
            </LinearLayout>


            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_robo_mini_mouse_contact" android:layout_height="match_parent" android:orientation="vertical">

                <ScrollView android:id="@+id/scrollView_robo_mouse_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linear_robo_mini_mouse_spec_inner" android:layout_width="match_parent" android:layout_height="match_parent">

                    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textMouseContact" android:text="Suparna S Nair\nEvent Manager\nPhone:+919048161122\nE-mail:minimouse@tathva.org\n\nVenu S Dharan\nEvent Manager\nPhone:+919539699177\nE-mail:minimouse@tathva.org\n\nKrishna Manikandan\nEvent Manager\nPhone:+919497365313\nE-mail:minimouse@tathva.orgSuparna S Nair\nEvent Manager\nPhone:+919048161122\nE-mail:minimouse@tathva.org\n\nVenu S Dharan\nEvent Manager\nPhone:+919539699177\nE-mail:minimouse@tathva.org\n\nKrishna Manikandan\nEvent Manager\nPhone:+919497365313\nE-mail:minimouse@tathva.org" android:layout_width="wrap_content" android:layout_height="wrap_content">
   					</TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>


          </FrameLayout>

    </LinearLayout>

</TabHost>
 </LinearLayout>
