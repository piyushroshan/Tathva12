<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
  android:background="#c3202e"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
   
    <LinearLayout android:id="@+id/linearLayout_highlight_envision_yi" android:layout_width="fill_parent" android:background="#000000" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>




            <LinearLayout
                android:id="@+id/linear_highlight_envision_yi_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_yi_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.03"
                            android:gravity="center"
                            android:text="Young Engineer"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text_highlight_envision_yi_Intro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.03"
                            android:text="Innovation blooms at an early age and if nurtured it can give way to a rich harvest. Through this event we hope to rope in the creative young minds and encourage them to ideate further. High school students who have a passion for science and a knack for creating something new are most welcome to bring in their models and participate."
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>

