<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#00688B"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
   
    <LinearLayout android:id="@+id/linearLayout_gen_tots" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost 
    android:id="@+id/tabhost_gen_tots"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1" 
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TabWidget
        
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" >
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_tots_intro" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_tots_title" android:text ="TOTS" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center"  android:gravity="center"  android:textSize="20dp" android:layout_weight="0.03"></TextView>
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_gen_tots_Intro" android:text="Tathva on the spot, fondly knowns as TOTS, is one of the attractions at Tathva where you can take a break from the world of technical mayhem and let your fun side rule.\nConsisting of challenging and fun filled events, tots can be an excellent venue to let go, relax a bit and take home exciting prizes " android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_tots_hunt" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_gen_tots_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_gen_tots_specs" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_gen_tots_specs" android:text="THE HUNT FOR ATLANTIS\n\n&quot;A box without hinges, key, or lid, yet golden quot\u037etreasure inside is hid. &quot;\n\t-J. R. R. Tolkien\nVenture out, solve the clues, and find the treasure for glory awaits only the persistent.\nRules:\n1. A maximum of 4 members are allowed in a team.\n2. There will be preliminary written round from which six teams will be selected for the\nfinal event.\n"
                                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_tots_elementart" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_gen_tots_stmt" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_gen_tots_stmt" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_gen_tots_stmt" android:text="ELEMENTARY\n\nBack to basics.\n\nRules:\n1. A maximum of 2 members are allowed in a team.\n2. Elementary is composed of two rounds of events.\n3. There will be a preliminary written round, which will test you on the simple concepts\nwhich drive science and technology. It will also check out your logical abilities and\ncommon sense.\n4. Those selected from the preliminary round will undergo a final round, which would\ninvolve simple hands\u00adon events, which will check your scientific acumen and your\nability to crack puzzling brain teasers.\n\nMore than anything else expect a lot of mad fun."
                                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_tots_tech" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_gen_tots_judge" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_gen_tots_judge" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_gen_tots_judge" android:text="TECH DUMB CHARADES\n\nBreak the sound barrier. Get your ideas conveyed in silence.\n\nRules:\n1. A maximum of 3 members are allowed in a team.\n2. Its the usual Dumb Charades with a different set of rounds.\n3. The stuff you would have to act out and decipher might include:\n\u25cb Famous personalities (Thomas Alva Edison, Alexander Graham Bell etc.)\n\u25cb Inventions (Penicillin, Telephone, Radio etc.)\n\u25cb Theories and Concepts (How would you act out gravity for instance?)\n\u25cb Events (Hiroshima bombing, Chernobyl Disaster)\n\nOn top of it, there will be really wacky rounds, which will blow you apart. So, be prepared. The fun never stops here at T.O.T.S."
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_tots_prizes" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_gen_tots_prizes" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_gen_tots_prizes" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_gen_tots_prizes" android:text="Tech Dumb Charades \nFirst:\\tRs. 600/-\nSecond:\\tRs. 300/-\nGift Vouchers\nThird:\\tElementary\nFirst:\\tRs. 1000/-\nSecond:\\tRs. 600/-\nThird:\\tGift Vouchers\nThe Hunt For Atlantis\nFirst:\\tRs. 3000/-\nSecond:\\tRs. 2000/-\nThird:\\tGift Vouchers\n" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
             
             
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_gen_tots_contact" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_gen_tots_contact" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_gen_tots_contact" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_gen_tots_contact" android:text="Nirmal Sabu\nEvent Manager\nPhone:+919895420189\nE-mail:tots@tathva.org\n\nRinin Rajan\nEvent Manager\nPhone:+919633789588\nE-mail:tots@tathva.org\n\nMaria Mathew\nEvent Manager\nPhone:+918891218010\nE-mail:tots@tathva.org" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
          </FrameLayout>
            
    </LinearLayout>
    
</TabHost>
 </LinearLayout>