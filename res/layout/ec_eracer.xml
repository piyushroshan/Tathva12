<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#3b5999"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
    <LinearLayout android:id="@+id/linearLayout_ec_eracer" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost 
    android:id="@+id/tabhost_ec_eracer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1" 
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TabWidget
        
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" >
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_eracer_intro" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_eracer_title" android:text ="E Racer" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center"  android:gravity="center"  android:textSize="20dp" android:layout_weight="0.03"></TextView>
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ec_eracer_Intro" android:text="Are you the digital warrior who gets an adrenaline rush when faced with a problem to sink your teeth into ?\nDoes the tick of a clock leave you shaken and stirred ?\nDo you feel right at home in the middle of resistors, transistors, soldering, CROs and capacitors?\n\nThen E RACER is just the event for you!\n\nIf you have the guts to enter the spider\'s web and come out of it,Tathva 12 presents E-racer where you race against time and rivals to collect the circuit required to complete your design.\nPit your knowledge and skills against the rest. The race is on!" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_eracer_specs" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ec_eracer_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_eracer_specs" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ec_eracer_specs" android:text="THE GAUNTLET\n\u25cf The teams will be given a questionnaire of 25 questions.\n\u25cf The questions will test the participants &quot; practical as well as theoretical knowledge of\nelectronics, their idea about the working of various common components. There will also\nbe some out of the box questions to test their problem solving skills and some mind\ntwisters too.\n\u25cf The Gauntlet allows a max of 10 groups to pass through.\n\nTHE RACE\n\u25cf The participants have to earn their design question.\n\u25cf The circuit will be divided into parts which the participants have to earn in the race by\nfinishing small tasks in the given time limit.\n\u25cf After the completion of each task, contestants will be given directions to their next task.\n\u25cf The race will be modeled on The Amazing Race  and each task will require basic\nunderstanding of the electronic circuits, logic design and workshop practice.\n\u25cf There will be limited number of circuits per task.\n\u25cf The top 5 teams to collect the complete circuit will go through to the next round.\n\nSHOWTIME\n\u25cf Participants will have to implement the design they acquired from the earlier round.\n\u25cf They will have 45 minutes to earn their entry to the final round.\n\u25cf In this time they will have to collect their components, get the stuff assembled and most\nimportantly, ensure that the circuit is working.\n  \nTHE ULTIMATE RACEWAY \u00ad To finish first, you must first finish!\n\u25cf This round measures your expertise in Electronics. Unleash your speed on the Ultimate\nRaceway.\n\u25cf It consists of 2 questions, both of which will be provided with 15 minutes for\nbrainstorming and 45 minutes for building, using components from the provided list.\n\u25cf These can be from any of the following topics\u00ad Logic Design, Network Theory and\nTelecommunication.\n\u25cf Partial completion of the task will also be considered for judging.\n"
                                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_eracer_team_specs" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ec_eracer_team_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_eracer_team_specs" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ec_eracer_team_specs" android:text="\n\u25cf Each team must consist of two members.\n\u25cf Participants must produce valid ID card of their institute.\n\u25cf Inter\u00adcollege teams are permitted.\n"
                                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
             
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_eracer_judge" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ec_eracer_judge" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_eracer_judge" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ec_eracer_judge" android:text=" \n\u25cf During the race,points will be awarded based on speed and accuracy of completing each\ntask.\n\u25cf In case of no output,partial outputs will also be considered for judging.\n\u25cf In the case of a tie, the points during the race will also be taken into consideration.\n\u25cf The decision of the event managers shall be final.\n" 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
           
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_eracer_contact" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_ec_eracer_contact" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_eracer_contact" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ec_eracer_contact" android:text="\nARAVIND K J\nEvent Manager\nPhone:+918891299576\nE-mail:eracer@tathva.org\n\nJOHN THOMAS\nEvent Manager\nPhone:+919496866692\nE-mail:eracer@tathva.org\n\nNEELIMA PRATAP\nEvent Manager\nPhone:+919400774128\nE-mail:eracer@tathva.org" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ec_eracer_prize" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_ec_eracer_prize" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ec_eracer_prize" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ec_eracer_prize" android:text="First\tRs. 7000/-\nSecond\tRs. 5000/-\nThird\tRs. 2000/-" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
          </FrameLayout>
            
    </LinearLayout>
    
</TabHost>
 </LinearLayout>