<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#3b5999"
    android:layout_height="fill_parent"
    android:weightSum="0">
   
    <LinearLayout android:id="@+id/linearLayout_ee_pure_tricks" android:layout_width="fill_parent" android:background="#000000" android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08"
            android:scaleType="fitStart"
            android:src="@drawable/img" >

		</ImageView>
    </LinearLayout>
    <TabHost 
    android:id="@+id/tabhost_ee_pure_tricks"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <HorizontalScrollView  android:id="@+id/horizontalScrollView1" 
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout2" android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
        <TabWidget
        
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
            </LinearLayout>
    </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp" >
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ee_pure_tricks_intro" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:orientation="vertical" android:layout_height="match_parent">
                       <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_pure_title" android:text ="Pure Tricks" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="center"  android:gravity="center"  android:textSize="20dp" android:layout_weight="0.03"></TextView>
                        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ee_pure_tricks_Intro" android:text=" \nThink you have the aptitude to solve any challenge &quot; purely trically &quot; with ease, readiness and in an accomplishd manner?\nThen let the electrical expertise in you be your partner for the show.\nDo not expect mind-boggling questions and unbreakable tasks at Pure Trics!!\nAll challenges here are meant to test your very basics and rational approach towards the boundless fields of electrical technology. " android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                        </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ee_pure_tricks_specs" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ee_pure_tricks_specs" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ee_pure_tricks_specs" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ee_pure_tricks_specs" android:text="1.A team can have a minimum of two members and maximum of three.\n2.Cross college teams are permitted.\n3.Participants from any branch of engineering have the liberty to take part.\n4.Teams are NOT entitled to carry personal components to the event. All the components\nrequired for the event will be provided by the organizers.\n\nRound 1\n\u25cf The prelims will be on\u00adthe\u00adspot and no pre\u00adregistration is required.\n\u25cf The first round will be an objective type exam, meant to test the basic understanding of\nconcepts.\n\nRound 2\n\u25cf The participants who clear Round 1 will move to Round 2.\n\u25cf This round too will be paper\u00adbased, but the questions will be slightly more complex and\npractical based than Round 1.\n\nRound 3\n\u25cf This is the final round.\n\u25cf Here, the participants have to go through a hands\u00adon challenge. Participants will be\nprovided with certain tasks/challenges.\n"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ee_pure_tricks_judge" android:layout_height="match_parent" android:orientation="vertical">
               <ScrollView android:id="@+id/scrollView_ee_pure_tricks_judge" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ee_pure_tricks_judge" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView_ee_pure_tricks_judge" android:text=" 1. Teams with higher aggregate in rounds 1 and 2 will be more preferred to the next round.\n2. In the final round, simplicity of the logic, minimal use of resources, neatness of the circuit and time taken to complete the task will be considered for deciding the winner.\n3. In case of a tie in the final round, performance in the previous rounds will be considered.\n4. In case of any discrepancy, the decision of the event coordinators shall be final in all\nrespects.\n\n" 
                 android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
             
             <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ee_pure_tricks_prizes" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_ee_pure_tricks_prizes" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ee_pure_tricks_prizes" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ee_pure_tricks_prizes" android:text="First\tRs. 6000/-\t + Gift Vouchers\nSecond\tRs. 4800/-\nThird\tRs. 2400/-\n" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linear_ee_pure_tricks_contact" android:layout_height="match_parent" android:orientation="vertical">
                <ScrollView android:id="@+id/scrollView_ee_pure_tricks_contact" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/linearLayout_ee_pure_tricks_contact" android:layout_width="match_parent" android:layout_height="match_parent">
                        
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/text_ee_pure_tricks_contact" android:text="\nNidheesh K\nEvent Manager\nPhone:+919846124879\nE-mail:puretrics@tathva.org\n\nR G Ajay Ganesh\nEvent Manager\nPhone:+918547846270\nE-mail:puretrics@tathva.org\n\nMeera Krishna\nEvent Manager\nPhone:+919744797092\nE-mail:puretrics@tathva.org" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                </LinearLayout>
                </ScrollView>
            </LinearLayout>
            
          </FrameLayout>
            
    </LinearLayout>
    
</TabHost>
 </LinearLayout>